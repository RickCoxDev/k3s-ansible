---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ dashboard.username }}
  namespace: kubernetes-dashboard
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ dashboard.username }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ dashboard.username }}
  namespace: kubernetes-dashboard